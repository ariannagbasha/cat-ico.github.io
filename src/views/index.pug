doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width,initial-scale=1")
		title Catico
		include favicon.html
		link(rel="stylesheet", type="text/css", href="style.css")
	body
		include vectors.svg
		main.main
			.logo
				.logo_wrapper
					include logo.svg
			include menu.pug
			section.section.intro#intro
				.intro_text
					h1.intro_title Catico
					.intro_subtitle creative web development
				a(href="#projects").intro_link
					.intro_arrows
						.intro_arrow
							svg
								use(xlink:href="#arrow")
						.intro_arrow
							svg
								use(xlink:href="#arrow")
			section.section.proj#projects
				a(href="#proj1").proj_el
					.proj_wrap
						img.proj_img(src="img/calc.png")
						.proj_poly
							include calc-hover.svg
						.proj_overlay
							.proj_title Calculator
				a(href="#proj2").proj_el
					.proj_wrap
						img.proj_img(src="img/rqm.png")
						.proj_poly
							include rqm-hover.svg
						.proj_overlay
							.proj_title Random quote machine
				a(href="#proj3").proj_el
					.proj_wrap
						img.proj_img(src="img/md.png")
						.proj_poly
							include md-hover.svg
						.proj_overlay
							.proj_title Markdown previewer
				a(href="#proj4").proj_el
					.proj_wrap
						img.proj_img(src="img/votex.png")
						.proj_poly
							include votex-hover.svg
						.proj_overlay
							.proj_title Voting app
				a(href="#proj5").proj_el
					.proj_wrap
						img.proj_img(src="img/pom.png")
						.proj_poly
							include pom-hover.svg
						.proj_overlay
							.proj_title Pomodoro timer
				a(href="#proj6").proj_el
					.proj_wrap
						img.proj_img(src="img/fb.png")
						.proj_poly
							include fb-hover.svg
						.proj_overlay
							.proj_title Facebook clone
			section.section.skills#skills
				h2.skills_title About me
				.skills_col
					p.skills_about I'm Katarina, a 26-year-old web developer currently based in Prague, Czech Republic. I have passion for design and animation and love creating websites with great visual experience.
					ul.skills_icons
						li
							i.skills_icon.devicon-inkscape-plain-wordmark
						li
							i.skills_icon.devicon-photoshop-plain.smaller
						li
							i.skills_icon.devicon-html5-plain-wordmark
						li
							i.skills_icon.devicon-css3-plain-wordmark
						li
							i.skills_icon.devicon-sass-plain
						li
							i.skills_icon.devicon-less-plain-wordmark
						li
							i.skills_icon.devicon-bootstrap-plain-wordmark
						li
							i.skills_icon.devicon-javascript-plain.smaller
						li
							i.skills_icon.devicon-jquery-plain-wordmark
						li
							i.skills_icon
								.skills_iconsvg
									svg
										use(xlink:href="#greensock")
						li
							i.skills_icon.devicon-react-plain-wordmark
				.skills_col
					ul.skills_icons
						li
							i.skills_icon.devicon-git-plain-wordmark
						li
							i.skills_icon.devicon-github-plain-wordmark
						li
							i.skills_icon.devicon-bitbucket-plain-wordmark
						li
							i.skills_icon.devicon-gulp-plain
						li
							i.skills_icon.devicon-grunt-plain-wordmark
